<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nysc1"
    android:id="@+id/land_layout"
    tools:context=".LandActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_banner_foreground" />

    <TextView
        android:id="@+id/txtdisp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@id/imageView"
        android:gravity="center"
        android:text="Dashboard"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtdisp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="WELCOME to the new and improved NYSC Mobile Application"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <ImageButton
        android:id="@+id/setting"
        android:layout_width="146dp"
        android:layout_height="130dp"
        android:layout_alignBottom="@+id/txtdisp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="-396dp"
        android:backgroundTint="@color/primary"
        android:clickable="true"
        app:srcCompat="@drawable/ic_settings" />


</RelativeLayout>